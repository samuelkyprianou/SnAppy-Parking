<div class="container">
  <div class="card border-0 shadow my-5">
    <div class="card-body p-5">
<% if @user.car_users.count >= 1 %>
  <h3>You have registered the following cars:</h3>
    <ul>
      <table>
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @user.car_users.each do |cu| %>
            <tr>
              <td><%= link_to cu.car.make, car_user_path(cu) %></td>
              <td><%= link_to 'Destroy', cu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </ul>
  <% else %>
    <h4>You have no cars registered!</h4> 
  <% end %>

<%= link_to "Register a New Car", new_car_path %><br>

<%= link_to "Find a Parking Space", parking_zones_path %><br>

</div>
</div>
</div>



