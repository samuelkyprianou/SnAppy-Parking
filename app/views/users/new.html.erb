<div class="container">
  <div class="card border-0 shadow my-5">
    <div class="card-body p-5">

<body class = "text-center" data-gr-c-s-loaded= "true">
<% if @user.errors.full_messages.length > 0 %>
  <h2><%= pluralize(@user.errors.full_messages.length , "error") %> prohibited this car from being registered:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1 class= "cover-heading"> Welcome to SnAppy!</h1>
<p class= "lead"> To find and purchase parking you will need to create an account</p>
<p class= "lead"> Please fill in the form below with your information:</p>


<%= form_for(@user) do |f| %>
  <table class = "center">
    <tbody>
      <tr>
        <td><%= f.label :username %></td>
        <td><%= f.text_field :user_name %></td>
      </tr>
      <tr>
        <td><%= f.label :first_name %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td><%= f.label :last_name %></td>
        <td> <%= f.text_field :last_name %></td>
      </tr>
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.email_field :email %></td>
      </tr>
      <tr>
        <td><%= f.label :password %></td>
        <td><%= f.password_field :password %></td>
      </tr>
    </tbody>
  </table><br>
  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small><br>
  <button type="submit" class="btn btn-danger text-uppercase " >Create User</button>
  <% end %>
  <br>
  <%= link_to "Home", root_path %>
</body>

</div>
</div>
</div>