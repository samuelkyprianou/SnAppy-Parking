<div class="container">
  <div class="card border-0 shadow my-5">
    <div class="card-body p-5">
<% if @car.errors.full_messages.length > 0 %>
  <h2><%= pluralize(@car.errors.full_messages.length , "error") %> prohibited this car from being registered:</h2>
  <ul>
    <% @car.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h1>Register a Car</h1>
<p>In order to purchase a parking ticket or browse our spaces you need to register a car with us!</p>

<%= form_for(@car) do |f| %>
<%= f.label :make %><br>
<%= f.text_field :make %><br>
<%= f.label :model %><br>
<%= f.text_field :model %><br>
<%= f.label :colour %><br>
<%= f.text_field :colour %><br>
<%= f.label :registration_plate %><br>
<%= f.text_field :registration_plate %><br><br>
<button type="submit" class="btn btn-danger text-uppercase ">Register Car</button>
<%end%>
</div>
</div>
</div>

